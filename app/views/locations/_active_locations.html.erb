<h3>Active Locations</h3>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <!--<th>Description</th> -->
      <th>Address</th>
      <th>City</th>
      <th>Capacity</th>
      <% if logged_in? && current_user.role == "admin" %>
      <th></th>
      <%end%>
    </tr>
  </thead>

  <tbody>
    <% @active_locations.each do |location| %>
      <tr>
    <td><%= link_to location.name, location_path(location) %></td>
    <td><%= location.street_1 %></td>
    <td><%= location.city %></td>
    <td><%= location.max_capacity %></td>
    <% if logged_in? && current_user.role == "admin" %>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <%end%>
  </tr>
    <% end %>
  </tbody>
</table>
<!-- Add the pagination using will_paginate gem -->
<span class="paginate">
<%= will_paginate @active_locations, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>